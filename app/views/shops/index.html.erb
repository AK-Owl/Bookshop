<h1>Shop</h1>



<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Avg rating</th>
      <th>Isbn</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>

      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.avg_rating %></td>
        <td><%= book.isbn %></td>
        <td><%= book.price %></td>
        <td><%= link_to 'Show', shop_path(book) %></td>

        <td>
        <%= form_for @order_item do |f|%>
        <%= f.hidden_field :book_id, :value => book.id %>
        <%= f.number_field :quantity, :value => 1, :main => 1%>
        <%= f.submit "Add to Cart"%>

        <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

